@{
    ViewData["Title"] = "Reconocer Imagen";
}

<h1>Reconocer Imagen con Azure</h1>

<form method="post">
    <label for="imageUrl">URL de la imagen:</label><br />
    <input type="text" name="imageUrl" required style="width: 60%;" />
    <button type="submit">Analizar</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red;">❌ Error: @ViewBag.Error</p>
}

@if (ViewBag.ImageUrl != null)
{
    <hr />
    <img src="@ViewBag.ImageUrl" style="max-width:400px;" />
    <p><strong>Descripción generada por Azure:</strong> @ViewBag.Caption</p>
}
